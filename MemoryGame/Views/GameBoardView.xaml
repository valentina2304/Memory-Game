<Window x:Class="MemoryGame.Views.GameBoardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryGame.Views"
        xmlns:converters="clr-namespace:MemoryGame.Converters"
        mc:Ignorable="d"
        Title="Memory Game" Height="690" Width="850"
        WindowStartupLocation="CenterScreen"
        Background="#FFD4C3F4">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:BoolToOpacityConverter x:Key="BoolToOpacityConverter" />
        <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
        <converters:IsImagePathConverter x:Key="IsImagePathConverter" />
        <converters:BoolToVisibilityMultiConverter x:Key="BoolToVisibilityMultiConverter" />

        <DataTemplate x:Key="CardTemplate">
            <Button Margin="2" 
            Command="{Binding DataContext.CardClickCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
            CommandParameter="{Binding}" 
            Opacity="{Binding IsMatched, Converter={StaticResource BoolToOpacityConverter}}">
                <Grid Width="120" Height="120">
                    <!-- Aici am mărit dimensiunile -->
                    <Border Background="LavenderBlush" 
                    BorderBrush="#FF8867C6"
                    BorderThickness="2"
                    Visibility="{Binding IsFlipped, Converter={StaticResource BoolToVisibilityMultiConverter}, ConverterParameter=Invert}">
                        <TextBlock Text="♣"
                           FontSize="36"
                           Foreground="#FF8867C6"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
                    </Border>

                    <Border Background="White" 
                    BorderBrush="#FF8867C6"
                    BorderThickness="2"
                    Visibility="{Binding IsFlipped, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid>
                            <Image Source="{Binding ImagePath}" 
                           Stretch="UniformToFill" 
                                Margin="5">
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ImagePath, Converter={StaticResource IsImagePathConverter}}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>

                            <TextBlock Text="{Binding Value}"
                               FontSize="36"
                               Foreground="#FF8867C6"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ImagePath, Converter={StaticResource IsImagePathConverter}}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>
                </Grid>
            </Button>
        </DataTemplate>

    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="1" 
                Background="LavenderBlush" 
                BorderBrush="#FF8867C6" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="10" 
                Margin="0,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Player: " Foreground="#FF8867C6" FontWeight="Bold" VerticalAlignment="Center" />
                    <TextBlock Text="{Binding CurrentPlayer.Username}" Foreground="#FF8867C6" VerticalAlignment="Center" Margin="0,0,15,0" />
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Time: " Foreground="#FF8867C6" FontWeight="Bold" VerticalAlignment="Center" />
                    <TextBlock Text="{Binding TimeDisplay}" Foreground="#FF8867C6" VerticalAlignment="Center" FontFamily="Consolas" />
                </StackPanel>
            </Grid>
            
            
        </Border>

        <ItemsControl Grid.Row="2" 
                      ItemsSource="{Binding Cards}" 
                      ItemTemplate="{StaticResource CardTemplate}"
                      Margin="0,10">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="{Binding Rows}" Columns="{Binding Columns}" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>

        <Border Grid.Row="3" 
        Background="LavenderBlush" 
        BorderBrush="#FF8867C6" 
        BorderThickness="1" 
        CornerRadius="5" 
        Padding="10" 
        Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1"
                Content="Save"
                Command="{Binding SaveGameCommand}"
                Margin="0,0,10,0"
                Padding="10,5"
                Background="#FF8867C6"
                Foreground="White"
                FontWeight="Bold"
                Width="100" />

                <Button Grid.Column="2"
                Content="Exit"
                Command="{Binding ExitCommand}"
                Padding="10,5"
                Background="#FF8867C6"
                Foreground="White"
                FontWeight="Bold"
                Width="100" />
            </Grid>
        </Border>
    </Grid>
</Window>