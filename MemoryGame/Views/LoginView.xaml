<Window x:Class="MemoryGame.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:MemoryGame.ViewModels"
        mc:Ignorable="d"
        Title="Sign In" Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#FFD4C3F4"
        >

    <Window.Resources>
        <vm:LoginViewModel x:Key="LoginViewModel" />
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>

    <Grid DataContext="{StaticResource LoginViewModel}" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Welcome to Memory Game!" 
               FontSize="28" 
               FontWeight="Bold"
               TextAlignment="Center"
               Foreground="#FF8867C6">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="2" Color="#CCCCCC" Opacity="0.8" BlurRadius="3"/>
            </TextBlock.Effect>
        </TextBlock>

        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- User List -->
            <ListBox Grid.Column="0"
                     ItemsSource="{Binding Users}"
                     SelectedItem="{Binding SelectedUser}"
                     DisplayMemberPath="Username"
                     Height="220"
                     VerticalAlignment="Center"
                     Background="LavenderBlush" Foreground="#FF8867C6"/>

            <Image Grid.Column="2"
                   Source="{Binding SelectedUser.ImagePath}"
                   Width="150"
                   Height="150"
                   Stretch="Uniform"
                   Margin="5"/>
        </Grid>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20">
            <Button Content="New User"
                    Foreground="#FF8867C6"
                    Command="{Binding NewUserCommand}"
                    Width="100"
                    Margin="5" 
                    Background="LavenderBlush"/>
            <Button Content="Delete User"
                    Foreground="#FF8867C6"
                    Command="{Binding DeleteUserCommand}"
                    Width="100"
                    Margin="5"
                    IsEnabled="{Binding IsUserSelected}" 
                    Background="LavenderBlush"/>
            <Button Content="Play"
                    Foreground="#FF8867C6"
                    Command="{Binding PlayCommand}"
                    Width="100"
                    Margin="5"
                    IsEnabled="{Binding IsUserSelected}" 
                    Background="LavenderBlush"/>
            <Button Content="Exit"
                    Foreground="#FF8867C6"
                    Width="100"
                    Margin="5"
                    Click="CloseButton_Click"
                    Background="LavenderBlush"/>
        </StackPanel>

        <Grid x:Name="NewUserDialog"
              Grid.RowSpan="3"
              Background="#80000000"
              Visibility="Collapsed">
            <Border Background="LavenderBlush"
                    Width="300"
                    Height="350"
                    CornerRadius="5"
                    Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Create New User"
                               Grid.Row="0"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#FF8867C6"
                               Margin="0,0,0,15"/>

                    <StackPanel Grid.Row="1" Margin="0,5">
                        <TextBlock Text="Username:" 
                                   Foreground="#FF8867C6"
                                   FontWeight="Medium"
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NewUsername, UpdateSourceTrigger=PropertyChanged}"
                                 Background="White"
                                 BorderBrush="#FF8867C6"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Margin="0,5">
                        <TextBlock Text="User Image:" 
                                   Foreground="#FF8867C6"
                                   FontWeight="Medium"
                                   Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <Button Content="&lt;&lt;"
                                    Background="LavenderBlush"
                                    Foreground="#FF8867C6"
                                    BorderBrush="#FF8867C6"
                                    Command="{Binding PreviousAvatarCommand}"
                                    Width="40"
                                    Margin="0,0,5,0" />
                            <Image Source="{Binding SelectedImagePath}"
                                   Width="160" 
                                   Height="100"
                                   Stretch="Uniform"/>
                            <Button Content="&gt;&gt;"
                                    Foreground="#FF8867C6"
                                    Background="LavenderBlush"
                                    BorderBrush="#FF8867C6"
                                    Command="{Binding NextAvatarCommand}"
                                    Width="40"
                                    Margin="5,0,0,0" />
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Row="4"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Button Content="Create"
                                Foreground="#FF8867C6"
                                Background="LavenderBlush"
                                BorderBrush="#FF8867C6"
                                Command="{Binding CreateUserCommand}"
                                Width="80"
                                Margin="0,0,5,0" />
                        <Button Content="Cancel"
                                Foreground="#FF8867C6"
                                Background="LavenderBlush"
                                BorderBrush="#FF8867C6"
                                Command="{Binding CancelCommand}"
                                Width="80" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>